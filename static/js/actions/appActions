

export function toggleMobileMenu(currentValue) {
    return function (dispatch) {
        return dispatch({
            type: "TOGGLE_MOBILE_MENU",
            payload: !currentValue
        });
    }
}

export function flashMessage(messages) {
    if (!Array.isArray(messages)) {
        messages = [messages];
    }
    return {
        type: "FLASH_MESSAGE",
        payload: messages
    };
}

export function clearFlashMessages() {
    return {
        type: "CLEAR_FLASH_MESSAGES",
    };
}